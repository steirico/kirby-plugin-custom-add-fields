{
    "name": "steirico/kirby-plugin-custom-add-fields",
    "description": "Custom fields for Kirby's add dialog. This plugin allows to define the fields shown on the page add dialog in a page's blueprint.",
    "version": "1.0.0-rc",
    "type": "kirby-plugin",
    "license": "MIT",
    "keywords": [
        "kirby3",
        "plugin",
        "field",
        "ro", "readonly", "read-only", "read only"
    ],
    "authors": [
        {
            "name": "Rico Steiner",
            "email": "rico@vweb.ch",
            "role": "Developer"
        }
    ],

    "autoload": {
        "files": [
            "config.php"
        ]
    },

    "require": {
        "getkirby/composer-installer": "^1.1"
    },

    "config": {
        "optimize-autoloader": true
    }
}
